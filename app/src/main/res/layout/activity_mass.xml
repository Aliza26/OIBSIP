<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/degreetextview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AngleActivity">

    <EditText
        android:id="@+id/editTextGrams"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="4dp"
        android:ems="16"
        android:hint="Enter Value here"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/poundstext"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="188dp"
        android:text="Pounds"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewGrams"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="88dp"
        android:text="grams"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextPounds"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="4dp"
        android:ems="20"
        android:hint="Enter Value Here"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/ClickGrams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="300dp"
        android:text="Gram to pounds" />

    <Button
        android:id="@+id/ClickPounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="240dp"
        android:text="Pounds to gram" />
</RelativeLayout>